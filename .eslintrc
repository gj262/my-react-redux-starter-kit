{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NW__" : false
  },
  "rules": {
    "semi" : 0,
    "brace-style" : 0,
    "no-multi-spaces" : 0,
    "key-spacing" : 0,
    "space-before-function-paren" : 0
  }
}
